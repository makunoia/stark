{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "jsx": "react",

    /* Custom alias */
    "baseUrl": "./",
    "paths": {
      // "stark-types": ["./types/index.d.ts"]
    },

    /* Build config */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",

    /* Rules */
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "include": ["src/*", "src/**/*", "src/**/**/*"],
  "exclude": ["node_modules", "dist", "src/components/archive/*"]
}
